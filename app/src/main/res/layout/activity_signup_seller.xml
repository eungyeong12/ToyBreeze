<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/seller_signup_name_jo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_background"
                android:ems="10"
                android:hint="대표자명"
                android:inputType="text"
                android:paddingStart="30px"
                android:paddingTop="11dp"
                android:paddingEnd="5px"
                android:paddingBottom="11dp" />

            <EditText
                android:id="@+id/seller_signup_email_jo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_background"
                android:ems="10"
                android:hint="이메일"
                android:inputType="textEmailAddress"
                android:paddingStart="30px"
                android:paddingEnd="5px"
                android:paddingTop="11dp"
                android:paddingBottom="11dp" />

            <EditText
                android:id="@+id/seller_signup_password_jo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_background"
                android:ems="10"
                android:hint="비밀번호"
                android:paddingEnd="5px"
                android:inputType="textPassword"
                android:paddingStart="30px"
                android:paddingTop="11dp"
                android:paddingBottom="11dp" />

            <EditText
                android:id="@+id/seller_signup_phone_jo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_background"
                android:ems="10"
                android:hint="전화번호"
                android:paddingEnd="5px"
                android:inputType="phone"
                android:paddingStart="30px"
                android:paddingTop="11dp"
                android:paddingBottom="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/seller_signup_business_jo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/edit_background"
                        android:ems="10"
                        android:hint="사업자등록번호"
                        android:inputType="number"
                        android:paddingStart="30px"
                        android:paddingTop="11dp"
                        android:paddingEnd="5px"
                        android:paddingBottom="11dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/seller_signup_business_certificate_jo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <android.widget.Button
                        android:id="@+id/seller_signup_business_certificate_jo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:text="인증"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/seller_signup_business_jo"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/seller_signup_button_jo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/nanum"
            android:text="회원가입"
            android:textColor="@color/black" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>