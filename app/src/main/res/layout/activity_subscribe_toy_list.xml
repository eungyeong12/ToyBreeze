<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_jo"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/left_arrow" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="토이토이"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="의 장난감 구독하기"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/li"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_background_black"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_background"
                        android:padding="10dp"
                        app:srcCompat="@drawable/toyimage2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView392"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="장난감 자동차" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/textView442"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="재고수량:"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView4002"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center"
                                android:text="7개"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView442"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView4112"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/category_background"
                                    android:gravity="center"
                                    android:scrollbars="none"
                                    android:text="3-4세"
                                    android:textColor="#454545" />

                                <TextView
                                    android:id="@+id/textView4022"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/category_background2"
                                    android:gravity="center"
                                    android:text="블록/조립"
                                    android:textColor="#454545" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_background_black"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView71"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_background"
                        android:padding="10dp"
                        app:srcCompat="@drawable/toyimage3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView391"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="뽀로로 자동차" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/textView441"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="재고수량:"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView4001"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center"
                                android:text="20개"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView441"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView4111"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/category_background"
                                    android:gravity="center"
                                    android:scrollbars="none"
                                    android:text="0-12개월"
                                    android:textColor="#454545" />

                                <TextView
                                    android:id="@+id/textView4011"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/category_background"
                                    android:gravity="center"
                                    android:scrollbars="none"
                                    android:text="1-2세"
                                    android:textColor="#454545" />

                                <TextView
                                    android:id="@+id/textView4021"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/category_background2"
                                    android:gravity="center"
                                    android:text="자동차/로봇"
                                    android:textColor="#454545" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_background_black"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_background"
                        android:padding="10dp"
                        app:srcCompat="@drawable/toyimage4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="빌딩 블록 장난감" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/textView44"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="재고수량:"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView400"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center"
                                android:text="15개"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView44"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView401"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/category_background"
                                    android:gravity="center"
                                    android:scrollbars="none"
                                    android:text="5-6세"
                                    android:textColor="#454545" />

                                <TextView
                                    android:id="@+id/textView402"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/category_background2"
                                    android:gravity="center"
                                    android:text="블록/조립"
                                    android:textColor="#454545" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="정기구독하기" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>