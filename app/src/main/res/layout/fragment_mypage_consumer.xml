<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consumer_mp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="마이페이지"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ccc"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingBottom="20sp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="162dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/mypage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="0sp">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="394dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="김주부" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1234@email.com" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/square_box"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:textColor="#ffffff"
                android:textSize="32px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="7.5sp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/truck_solid" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="주문*배송" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="확인하기" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/comment_dots_solid" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="리뷰" />

                    <TextView
                        android:id="@+id/review_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1건" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ticket_solid" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="쿠폰" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="23장" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/point_solid" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="포인트" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1,300" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <View
            android:id="@+id/etc_line"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#ccc"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/adfirstline"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#ccc"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ad" />

        <View
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#ccc"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="최근 본 상품"
                app:lastBaselineToBottomHeight="4sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/review_button"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_empty"
                    android:text="리뷰 관리" />

                <TextView
                    android:id="@+id/review"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="리뷰 관리" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/order_history_button"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_empty"
                    android:text="주문 내역" />

                <TextView
                    android:id="@+id/order_history"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="주문 내역" />

            </FrameLayout>

            <TextView
                android:id="@+id/refund"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="취소/반품/교환 내역" />

            <TextView
                android:id="@+id/alarm"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="재입고 알림 내역" />

            <TextView
                android:id="@+id/edit_info"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="회원 정보 수정" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="배송지 관리" />

            <TextView
                android:id="@+id/subscription"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="정기 구독 관리" />
        </LinearLayout>
        <!-- textview 테두리 선 시간 남으면 하기 -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>