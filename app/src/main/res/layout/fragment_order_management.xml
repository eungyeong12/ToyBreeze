<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="주문 내역 관리"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/category_background3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_management_category1_jo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/category_backgorund3_left_checked"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="대여"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#858585"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/order_management_category2_jo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="정기구독"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/beforeDelivery_jo"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_background2"
            android:text="배송전"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <android.widget.Button
            android:id="@+id/afterDelivery_jo"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_background2"
            android:text="배송완료"
            android:textColor="#686868"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    </FrameLayout>

</LinearLayout>