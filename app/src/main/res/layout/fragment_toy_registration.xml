<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_toy_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="장난감 이름"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/toy_name_jo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_background"
                android:ems="10"
                android:inputType="text"
                android:paddingStart="7dp"
                android:paddingTop="7dp"
                android:paddingEnd="5px"
                android:paddingBottom="7dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="장난감 이미지"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/toy_image_count_jo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/3"
                    android:textColor="#888888" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/gotoGallery_jo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/img_background"
                            android:padding="15dp"
                            app:srcCompat="@drawable/gallery" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/toy_image1_container_jo"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/toy_image1_jo"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/toy_image2_container_jo"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/toy_image2_jo"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_weight="1"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/toy_image3_container_jo"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/toy_image3_jo"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_weight="1"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/toy_image_del1_jo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="165dp"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/remove" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/toy_image_del2_jo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="256dp"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/remove" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/toy_image_del3_jo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="346dp"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/remove" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="카테고리 설정"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="5dp"
                android:text="성별"
                android:textColor="#6E6E6E" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="70dp"
                android:paddingEnd="70dp">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_left_selector"
                    android:button="@null"
                    android:checked="false"
                    android:fontFamily="@font/nanum"
                    android:text="남자"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_middle_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="여자"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_right_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="공용"
                    android:textAlignment="center"
                    android:textColor="#454545" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="5dp"
                android:text="나이"
                android:textColor="#6E6E6E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/category_background_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="0-12개월"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton41"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/category_background_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="1-2세"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton42"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/category_background_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="3-4세"
                    android:textAlignment="center"
                    android:textColor="#454545" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton43"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/category_background_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="5-6세"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton44"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/category_background_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="7-8세"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton45"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/category_background_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="9세 이상"
                    android:textAlignment="center"
                    android:textColor="#454545" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="3dp"
                android:paddingStart="5dp"
                android:text="카테고리"
                android:textColor="#6E6E6E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton46"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/category_background2_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="인형"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton47"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/category_background2_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="블록/조립"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton48"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/category_background2_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="롤플레잉"
                    android:textAlignment="center"
                    android:textColor="#454545" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton49"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/category_background2_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="자동차/로봇"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton40"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/category_background2_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="스포츠/예술"
                    android:textAlignment="center"
                    android:textColor="#454545" />

                <RadioButton
                    android:id="@+id/radioButton411"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/category_background2_selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum"
                    android:text="학습/퍼즐"
                    android:textAlignment="center"
                    android:textColor="#454545" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="가격"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/toy_price_jo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_background_rect"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingStart="7dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="5dp" />

                <TextView
                    android:id="@+id/textView282"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="원" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="재고 수량"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/toy_stock_jo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_background_rect"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingStart="7dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="5dp" />

                <TextView
                    android:id="@+id/textView283"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="개" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="장난감 사용 설명"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/regist_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/toy_description_image_jo"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/camera" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/toy_description_image_container_jo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical" />

                <EditText
                    android:id="@+id/toy_description_jo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edit_background_solid"
                    android:ems="10"
                    android:inputType="text|textMultiLine"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="파손 시 해결방법"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/regist_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/toy_destroy_description_image_jo"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/camera" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/toy_destroy_description_image_container_jo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                </LinearLayout>

                <EditText
                    android:id="@+id/toy_destroy_description_jo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edit_background_solid"
                    android:ems="10"
                    android:inputType="text|textMultiLine"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp" />

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/toy_registration_button_jo"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/btn_background3"
                android:fontFamily="@font/nanum"
                android:text="등록"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>